{
    "compilerOptions": {
        "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
        "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
          "@/*": ["src/*"],
          "components/*": ["src/components/*"],
          "utils/*": ["src/utils/*"],
        },
        // "lib": ["ES2015"]
    },
    "include": [
        "./**/*.*",
        "./shims-vue.d.ts",
    ],
    "exclude": [
        "node_modules"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": "true",
}
