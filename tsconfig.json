{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
          "@/*": ["packages/yzz-design/*"]
        },
        "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
        "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
        "jsx": "preserve",
        "lib": ["ES2015.Promise","ESNext","DOM"]
    },
    "include": [
        "packages/yzz-design/**/*.*",
        "packages/yzz-design/shims-vue.d.ts",
    ],
    "exclude": [
        "node_modules"
    ],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": "true"
}